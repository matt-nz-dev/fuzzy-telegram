container_commands:
    49-allow-root:
        command: "export COMPOSER_ALLOW_SUPERUSER=1"
        cwd: "/var/app/ondeck"
        ignoreErrors: false
        leader_only: false
    50-run-database-migrations:
        command: "composer.phar phinx migrate"
        cwd: "/var/app/ondeck"
        ignoreErrors: false
        leader_only: true
        env:
            COMPOSER_HOME: /var/app/ondeck
            COMPOSER_ALLOW_SUPERUSER: 1
